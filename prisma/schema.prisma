generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  username String @unique
  email    String @unique
  password String
  bookings Bookings[]
}

model Bookings {
  id         Int      @id @default(autoincrement())  // Unique identifier for each booking
  userId     Int      // Reference to User
  bookingDate DateTime // Date of the booking
  status     String   // Status of the booking, e.g., pending, confirmed, etc.
  createdAt  DateTime @default(now()) // When the booking was created
  updatedAt  DateTime @updatedAt // When the booking was last updated

  user       User @relation(fields: [userId], references: [id]) // Relation to User
}